<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapActivity"
    android:background="@drawable/listgrad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/ruslandisplay_regular"
            android:text="@string/app_name"
            android:textColor="@color/yellow"
            android:textSize="48sp" />

        <org.osmdroid.views.MapView
            android:layout_width="match_parent"
            android:layout_height="605dp"
            android:id="@+id/osmMap">

        </org.osmdroid.views.MapView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/darkblue">


            <ImageButton
                android:id="@+id/arcade"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/controlrecto"
                android:background="@null"
                android:padding="5dp"
                />

            <ImageButton
                android:id="@+id/mapa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/colorstroke"
                android:src="@drawable/mapa"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/chats"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/group"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/persona"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/hito"
                android:padding="5dp"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>