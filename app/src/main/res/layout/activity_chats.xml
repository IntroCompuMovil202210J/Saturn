<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listgrad"
    android:orientation="vertical"
    tools:context=".chatsActivity">

    <TextView
        android:id="@+id/marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ruslandisplay_regular"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/yellow"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/fotoJavier"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotoMariana">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/user" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fotoMariana"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotoDavid">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/girltwo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fotoDavid"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#AC6262"
                app:cardCornerRadius="100dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mensajes">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/mantwo" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/mensajes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Mensajes"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/DavidG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="David G"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FDFDFD"
                app:layout_constraintEnd_toStartOf="@+id/online1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/fotoDavid"
                app:layout_constraintTop_toTopOf="@+id/fotoDavid" />

            <TextView
                android:id="@+id/Mariana"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Mariana L"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FDFDFD"
                app:layout_constraintEnd_toStartOf="@+id/online3"
                app:layout_constraintStart_toEndOf="@+id/fotoMariana"
                app:layout_constraintTop_toTopOf="@+id/fotoMariana" />

            <TextView
                android:id="@+id/JavierA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Javier A"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FDFDFD"
                app:layout_constraintEnd_toStartOf="@+id/cardView5"
                app:layout_constraintStart_toEndOf="@+id/fotoJavier"
                app:layout_constraintTop_toTopOf="@+id/fotoJavier" />

            <TextView
                android:id="@+id/mensajeDavid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Hola, ¿Cómo estas?"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/fotoDavid"
                app:layout_constraintEnd_toStartOf="@+id/fechaDavid"
                app:layout_constraintStart_toEndOf="@+id/fotoDavid"
                app:layout_constraintTop_toBottomOf="@+id/DavidG"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/mensajeMariana"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="¿Donde nos vemos?"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/fotoMariana"
                app:layout_constraintEnd_toStartOf="@+id/fechaMariana"
                app:layout_constraintStart_toEndOf="@+id/fotoMariana" />

            <TextView
                android:id="@+id/mensajeJavier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Agrégame en Steam!"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/fotoJavier"
                app:layout_constraintEnd_toStartOf="@+id/fechaJavier"
                app:layout_constraintStart_toEndOf="@+id/fotoJavier" />

            <TextView
                android:id="@+id/fechaDavid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="12/05"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/mensajeDavid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mensajeDavid" />

            <TextView
                android:id="@+id/fechaMariana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="12/05"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/mensajeMariana"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mensajeMariana" />

            <TextView
                android:id="@+id/fechaJavier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="11/05"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/mensajeJavier"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mensajeJavier" />

            <androidx.cardview.widget.CardView
                android:id="@+id/online1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="#91E192"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/DavidG"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/DavidG" />

            <View
                android:id="@+id/divider2"
                android:layout_width="409dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mensajeDavid" />

            <View
                android:id="@+id/divider3"
                android:layout_width="409dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mensajeMariana" />

            <androidx.cardview.widget.CardView
                android:id="@+id/online3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="#91E292"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/Mariana"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Mariana" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="#B62E24"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/JavierA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/JavierA" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkblue"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/arcade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/controlrecto" />

        <ImageButton
            android:id="@+id/mapa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/mapa" />

        <ImageButton
            android:id="@+id/chats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/colorstroke"
            android:padding="5dp"
            android:src="@drawable/group" />

        <ImageButton
            android:id="@+id/persona"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/hito" />
    </LinearLayout>

</LinearLayout>